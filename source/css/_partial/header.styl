#header
  height: header-height
  position: relative
  background-color: color-header-background
  box-shadow: 0 1px 2px rgba(0,0,0,0.05);

#header-outer
  height: 100%
  position: relative

#logo-wrap
  float: left
  height: header-height
  line-height: header-height
  @media mq-mobile
    display: none

$logo-text
  text-decoration: none
  color: color-default
  font-weight: 300
  text-shadow: 0 1px 4px rgba(0, 0, 0, 0.3)

#logo
  @extend $logo-text
  font-size: logo-size
  line-height: header-height
  letter-spacing: 2px

#subtitle
  @extend $logo-text
  font-size: subtitle-size
  line-height: subtitle-size
  letter-spacing: 1px

#subtitle-wrap
  margin-top: subtitle-size

#main-nav
  float: left
  margin-left: 15px

$nav-link  
  height: header-height
  line-height: header-height
  font-size: 18px
  text-align: center
  padding:0 10px;
  color: color-default
  opacity: 0.8
  text-decoration: none
  text-shadow: 0 1px rgba(0, 0, 0, 0.2)
  transition: opacity 0.2s
  display: block
  &:hover
    opacity: 1

.nav-icon
  @extend $nav-link
  float: left
  font-family: font-icon
  position: relative
  cursor: pointer
  &:hover
    opacity: 1

.main-nav-link
  @extend $nav-link
  float: left
  font-weight: 300
  letter-spacing: 1px
  @media mq-mobile
    display: none

#main-nav-toggle
  display: none
  &:before
    content: "\f0c9"
  @media mq-mobile
    display: block
    margin-left: -10px

#sub-nav
  @extend $nav-link
  float: right
  font-family: font-icon
  text-align: center
  position: relative
  cursor: pointer
  &:hover
    opacity: 1

#nav-rss-link
  &:before
    content: "\f09e"

#nav-search-btn
  &:before
    content: "\f002"

#search-form-wrap
  position: absolute
  top: 15px
  width: 150px
  height: 30px
  right: -150px
  opacity: 0
  transition: 0.2s ease-out
  &.on
    opacity: 1
    right: 0
  @media mq-mobile
    width: 100%
    right: -100%

.search-form
  position: absolute
  top: 0
  left: 0
  right: 0
  background: #fff
  padding: 5px 15px
  border-radius: 15px
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.05)

.search-form-input
  border: none
  background: none
  color: color-default
  width: 100%
  font: 13px font-sans
  outline: none
  &::-webkit-search-results-decoration
  &::-webkit-search-cancel-button
    -webkit-appearance: none

.search-form-submit
  position: absolute
  top: 50%
  right: 10px
  margin-top: -7px
  font: 13px font-icon
  border: none
  background: none
  color: #bbb
  cursor: pointer
  &:hover, &:focus
    color: #777